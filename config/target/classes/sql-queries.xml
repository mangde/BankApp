<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="addCustomer">
        <![CDATA[INSERT INTO customerDetail(name,phone) VALUES(:name,:phone)]]>
    </entry>
    <entry key="addAddress">
        <![CDATA[INSERT INTO address(address1,city,customerId) VALUES(:address,:city,:customerId)]]>
    </entry>
    <entry key="selectAllCustomers">
        <![CDATA[SELECT c.customerId,name,phone,address1,city
                    FROM customerDetail c
                    INNER JOIN address a
                    ON c.customerId=a.customerId
            GROUP BY c.customerId,name,phone, address1,city
        ]]>
    </entry>
    <entry key="addAccount">
        <![CDATA[INSERT INTO account(accTypeId,balance,customerId) VALUES(:accTypeId,:balance,:customerId)]]>
    </entry>
    <entry key="getAccTypeId">
        <![CDATA[SELECT accTypeId FROM acctype WHERE accTypeDesc= :type]]>
    </entry>
    <entry key="getBalance">
        <![CDATA[SELECT balance FROM account WHERE accNo = :accNumber]]>
    </entry>
    <entry key="depositeAmount">
        <![CDATA[UPDATE account SET balance=:newBalance WHERE accNo=:accNumber ]]>
    </entry>
    <entry key="accountDetail">
        <![CDATA[SELECT accNo,accTypeId,balance,customerId FROM account WHERE accNo=:accNumber ]]>
    </entry>

    <entry key="transfer">
        <![CDATA[INSERT INTO transaction_detail(dateTime,amount,accFrom,accTo,description) VALUES(:dateTime,:amount ,:accFrom,:accTo,:description)]]>
    </entry>
    <entry key="updateBalance">
        <![CDATA[UPDATE account SET balance=:newBalance WHERE accNo=:accNumber ]]>
    </entry>
    <entry key="transactionHistory">
        <![CDATA[SELECT transactionId,dateTime,amount,accFrom,accTo,description FROM transaction_detail WHERE accFrom=:accNumber OR accTo=:accNumber ]]>
    </entry>

</properties>